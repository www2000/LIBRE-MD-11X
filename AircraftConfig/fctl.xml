<!-- MD-11 Aircraft Config Dialog -->

<PropertyList>

	<name>aircraft-config-fctl</name>
	<layout>vbox</layout>

    <group>
        <layout>hbox</layout>
        <text>
            <halign>left</halign>
            <label>Flight Controls</label>
        </text>
        <button>
            <halign>right</halign>
            <pref-width>20</pref-width>
            <pref-height>20</pref-height>
            <legend>X</legend>
            <key>Esc</key>
            <binding>
                <command>dialog-close</command>
            </binding>
        </button>
    </group>
	
    <hrule/>
	
	<group>
		<layout>hbox</layout>
		<text>
			<label>MAN/LSAS/AP</label>
		</text>
	</group>
	
	<group>
		<layout>vbox</layout>
		
		<group>
			<layout>hbox</layout>

			<hrule>
				<stretch type="bool">true</stretch>
			</hrule>
			<text>
				<label>Roll</label>
			</text>
			<hrule>
				<stretch type="bool">true</stretch>
			</hrule>
		</group>
		
		<group>
			<layout>hbox</layout>
			
			<group>
				<layout>vbox</layout>
				
				<text>
					<label>L1:</label>
				</text>
				<slider>
					<pref-height>150</pref-height>
					<vertical>true</vertical>
					<property>/fdm/jsbsim/hydraulics/aileron-out-l/final-deg</property>
					<min>-20</min>
					<max>20</max>
					<step>0.002</step>
					<live>true</live>
				</slider>
			</group>
			
			<group>
				<layout>vbox</layout>
				
				<text>
					<label>L2:</label>
				</text>
				<slider>
					<pref-height>150</pref-height>
					<vertical>true</vertical>
					<property>/fdm/jsbsim/hydraulics/aileron-in-l/final-deg</property>
					<min>-20</min>
					<max>20</max>
					<step>0.002</step>
					<live>true</live>
				</slider>
			</group>
				
			<group>
				<layout>vbox</layout>
				
				<text>
					<label>R2:</label>
				</text>
				<slider>
					<pref-height>150</pref-height>
					<vertical>true</vertical>
					<property>/fdm/jsbsim/hydraulics/aileron-in-r/final-deg</property>
					<min>-20</min>
					<max>20</max>
					<step>0.002</step>
					<live>true</live>
				</slider>
			</group>
			
			<group>
				<layout>vbox</layout>
				
				<text>
					<label>R1:</label>
				</text>
				<slider>
					<pref-height>150</pref-height>
					<vertical>true</vertical>
					<property>/fdm/jsbsim/hydraulics/aileron-out-r/final-deg</property>
					<min>-20</min>
					<max>20</max>
					<step>0.002</step>
					<live>true</live>
				</slider>
			</group>
		</group>
		
		<group>
			<layout>hbox</layout>

			<hrule>
				<stretch type="bool">true</stretch>
			</hrule>
			<text>
				<label>Pitch</label>
			</text>
			<hrule>
				<stretch type="bool">true</stretch>
			</hrule>
		</group>
		
		<group>
			<layout>hbox</layout>
			
			<group>
				<layout>vbox</layout>
				
				<text>
					<label>L1:</label>
				</text>
				<slider>
					<pref-height>150</pref-height>
					<vertical>true</vertical>
					<property>/fdm/jsbsim/hydraulics/elevator-out-l/final-deg</property>
					<min>-20.1</min>
					<max>17.2</max>
					<step>0.002</step>
					<live>true</live>
				</slider>
			</group>
			
			<group>
				<layout>vbox</layout>
				
				<text>
					<label>L2:</label>
				</text>
				<slider>
					<pref-height>150</pref-height>
					<vertical>true</vertical>
					<property>/fdm/jsbsim/hydraulics/elevator-in-l/final-deg</property>
					<min>-20.1</min>
					<max>17.2</max>
					<step>0.002</step>
					<live>true</live>
				</slider>
			</group>
				
			<group>
				<layout>vbox</layout>
		
				<text>
					<label>Trim:</label>
				</text>
				<slider>
					<pref-height>150</pref-height>
					<vertical>true</vertical>
					<property>/fdm/jsbsim/hydraulics/stabilizer/final-deg</property>
					<min>-15.5</min>
					<max>1</max>
					<step>0.0015</step>
					<live>true</live>
				</slider>
			</group>
			
			<group>
				<layout>vbox</layout>
				
				<text>
					<label>R2:</label>
				</text>
				<slider>
					<pref-height>150</pref-height>
					<vertical>true</vertical>
					<property>/fdm/jsbsim/hydraulics/elevator-in-r/final-deg</property>
					<min>-20.1</min>
					<max>17.2</max>
					<step>0.002</step>
					<live>true</live>
				</slider>
			</group>
			
			<group>
				<layout>vbox</layout>
				
				<text>
					<label>R1:</label>
				</text>
				<slider>
					<pref-height>150</pref-height>
					<vertical>true</vertical>
					<property>/fdm/jsbsim/hydraulics/elevator-out-r/final-deg</property>
					<min>-20.1</min>
					<max>17.2</max>
					<step>0.002</step>
					<live>true</live>
				</slider>
			</group>
		</group>
		
		<group>
			<layout>hbox</layout>

			<hrule>
				<stretch type="bool">true</stretch>
			</hrule>
			<text>
				<label>Upper Rudder</label>
			</text>
			<hrule>
				<stretch type="bool">true</stretch>
			</hrule>
		</group>
		
		<group>
			<layout>hbox</layout>
			
			<group>
				<layout>vbox</layout>
				
				<slider>
					<pref-width>150</pref-width>
					<property>/fdm/jsbsim/hydraulics/rudder-upper/final-deg</property>
					<min>-30</min>
					<max>30</max>
					<step>0.003</step>
					<live>true</live>
				</slider>
			</group>
		</group>
		
		<group>
			<layout>hbox</layout>

			<hrule>
				<stretch type="bool">true</stretch>
			</hrule>
			<text>
				<label>Lower Rudder</label>
			</text>
			<hrule>
				<stretch type="bool">true</stretch>
			</hrule>
		</group>
		
		<group>
			<layout>hbox</layout>
			
			<group>
				<layout>vbox</layout>
				
				<slider>
					<pref-width>150</pref-width>
					<property>/fdm/jsbsim/hydraulics/rudder-lower/final-deg</property>
					<min>-30</min>
					<max>30</max>
					<step>0.003</step>
					<live>true</live>
				</slider>
			</group>
		</group>
	</group>
	
</PropertyList>
